    <span class="text-danger" asp-validation-for="EmpHireDate"></span>
</div>

@* ============================== Select FK Department ============================== *@

<div class="form-group">
    <label class="col-form-label" asp-for="FKDepartment"></label>
    <select class="form-control" asp-for="FKDepartment" asp-items="@departmentDependancyInjection">
        <option value="@null"> -- Select Department -- </option>
    </select>
</div>

